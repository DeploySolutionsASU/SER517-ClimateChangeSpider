package com.deploysolutions.searchApp;

import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.net.HttpURLConnection;
import java.net.URL;
import java.util.ArrayList;

import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Path("/searchC")
public class SearchController {
	
 	@GET
    @Produces(MediaType.APPLICATION_JSON)
 	@Path("/search")
 	public void search(ArrayList<String> keywords) {
 		
 		try {

 		  String query = "{\"query\":{\"query_string\":{\"query\":\"(Climate AND Breakdown) OR Flooding\",\"default_field\":\"value_of_desc\"}}}\'";
 		 String command = "curl -X POST http://localhost:9200/article/_search?pretty -H \"Content-Type: application/json\" -d \'"+query;
 		System.out.println("Command "+command);
 		Process process = Runtime.getRuntime().exec(command);
 		process.getInputStream();

		} catch (IOException e) {
			// TODO Auto-generated catch block
			System.out.println(e.getMessage());
			e.printStackTrace();
		}
 		 
 		
 	}

}
